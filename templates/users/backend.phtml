	print 'wv16.attributesPerType[\''.$type->getName().'\'] = [';

	$list = array();

	foreach ($type->getAttributes() as $attr) {
		if (!$attr->isVisible()) continue;
		$list[] = $attr->getID();
	}

	print implode(',', $list);
	print "];\n";
